<!-- Простейший JS для переключения вкладок -->
<script>
document.addEventListener('DOMContentLoaded', function () {
    var tabs = document.querySelectorAll('.pages-main-nav__item');
    var contents = document.querySelectorAll('.hotel-tab-content');

    tabs.forEach(function (tab) {
        tab.addEventListener('click', function () {
            var target = tab.getAttribute('data-tab');

            tabs.forEach(function (t) {
                t.classList.remove('pages-main-nav__item_active');
            });
            tab.classList.add('pages-main-nav__item_active');

            contents.forEach(function (c) {
                if (c.getAttribute('data-tab') === target) {
                    c.classList.add('hotel-tab-content_active');
                } else {
                    c.classList.remove('hotel-tab-content_active');
                }
            });
        });
    });
});
</script>

