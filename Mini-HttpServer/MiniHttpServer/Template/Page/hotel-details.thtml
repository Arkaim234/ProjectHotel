    </header>

    <!-- ====== КОНТЕНТ СТРАНИЦЫ ОТЕЛЯ ====== -->
    <div class="cmn-l-content cmn-l-content_main">

        <!-- Хлебные крошки -->
        <div class="cmn-l-breadcrumbs">
            <div class="cmn-l-breadcrumbs__items">
                <a class="cmn-l-breadcrumbs__item" href="/">Главная</a> »
                <a class="cmn-l-breadcrumbs__item" href="/countries/">Страны</a> »
                $if(PlaceInfo)
                    <a class="cmn-l-breadcrumbs__item" href="/country/">${PlaceInfo.Country}</a> »
                    <a class="cmn-l-breadcrumbs__item" href="/country/hotels/">Список отелей</a> »
                $endif
                <span class="cmn-l-breadcrumbs__item">${Hotel.Name}</span>
            </div>
        </div>

        <div class="cmn-l-block-wrap">

            <!-- Заголовок: Название -->
            <h2 class="cmn-l-block-title">
                ${Hotel.Name}
            </h2>

            <!-- Локация под заголовком -->
            <div class="hotel-location-line">
                <img class="topcontent-header__location-img" src="/images/geo-pin.svg"
                     width="15" height="15" alt="Выбор страны">
                $if(PlaceInfo)
                    <span class="hotel-location-country">${PlaceInfo.Country}</span>,
                    <span class="hotel-location-city">${PlaceInfo.City}</span>
                $endif
            </div>

            <!-- Табы -->
            <div class="pages-main-nav">
                <a class="pages-main-nav__item pages-main-nav__item_active"
                   data-tab="description">Описание</a>
                <a class="pages-main-nav__item"
                   data-tab="rooms">Номера</a>
                <a class="pages-main-nav__item"
                   data-tab="infra">Инфраструктура</a>
                <a class="pages-main-nav__item"
                   data-tab="news">Акции и новости</a>
            </div>

            <!-- Верхняя часть: фото -->
            <div class="hotel-top-block">
                <div class="hotel-top-block__main-photo">
                    <img src="${Hotel.PhotoUrl}" alt="${Hotel.Name}" class="hotel-main-image">
                </div>

                <div class="hotel-top-block__side-photos">
                    <!-- Здесь позже можно сделать $foreach по дополнительным фото -->
                </div>
            </div>

            <!-- Ссылка "На карте" -->
            <div class="hotel-map-link-row">
                <span class="photo-block-map-toggler-img-wrap">
                    <img class="photo-block-map-toggler-img" src="/images/geo-pin2.svg">
                </span>
                $if(PlaceInfo)
                    <a href="https://www.google.com/maps/search/?api=1&query=${PlaceInfo.Address}"
                       class="hotel-map-link"
                       target="_blank" rel="noopener">
                        На карте
                    </a>
                $endif
            </div>

            <!-- ====== ВКЛАДКА: ОПИСАНИЕ ====== -->
            <div class="hotel-tab-content hotel-tab-content_active" data-tab="description">

                <div class="hotel-info-grid">
                    <!-- Расположение -->
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Расположение</div>
                        <div class="hotel-info-value">
                            $if(PlaceInfo)
                                <p>${PlaceInfo.City}, ${PlaceInfo.Country}, ${PlaceInfo.Address}</p>
                                <p>До аэропорта: ${PlaceInfo.DistanceToAirport}</p>
                                <p>До центра: ${PlaceInfo.DistanceToCenter}</p>
                            $else
                                <p>Информация уточняется.</p>
                            $endif
                        </div>
                    </div>

                    <!-- Пляж -->
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Пляж</div>
                        <div class="hotel-info-value">
                            $if(PlaceInfo)
                                <p>Расстояние до пляжа: ${PlaceInfo.DistanceToBeach}</p>
                            $else
                                <p>Информация уточняется.</p>
                            $endif
                        </div>
                    </div>

                    <!-- Основная информация -->
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Основная информация</div>
                        <div class="hotel-info-value">
                            $if(Description)
                                <p>Год открытия: ${Description.YearOpened} г.</p>
                                <p>Год реновации: ${Description.YearRenovated} г.</p>
                                <p>Площадь территории: ${Description.TotalAreaSquareMeters} м²</p>
                                <p>${Description.BuildingInfo}</p>
                            $else
                                <p>Описание уточняется.</p>
                            $endif
                        </div>
                    </div>

                    <!-- Контакты -->
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Контакты</div>
                        <div class="hotel-info-value">
                            $if(Contacts)
                                <ul class="hotel-contacts">
                                    $foreach(var c in Contacts)
                                        <li>${c}</li>
                                    $endfor
                                </ul>
                            $else
                                <p>Контактная информация уточняется.</p>
                            $endif
                        </div>
                    </div>

                    <!-- Примечание -->
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Примечание</div>
                        <div class="hotel-info-value">
                            $if(Hotel.Description)
                                <p>${Hotel.Description}</p>
                            $else
                                <p>Информация уточняется.</p>
                            $endif
                        </div>
                    </div>
                </div>

                <!-- Кнопка бронирования -->
                <div class="hotel-booking-row">
                    <a href="/search/?hotelId=${Hotel.Id}"
                       class="hotel-booking-btn">
                        Забронировать от ${Hotel.Price} ₽
                    </a>
                </div>
            </div>

            <!-- ====== ВКЛАДКА: НОМЕРА ====== -->
            <div class="hotel-tab-content" data-tab="rooms">
                <div class="hotel-info-grid">
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">В номере</div>
                        <div class="hotel-info-value">
                            $if(InRoomServices)
                                <ul>
                                    $foreach(var s in InRoomServices)
                                        <li>• ${s}</li>
                                    $endfor
                                </ul>
                            $else
                                <p>Информация о номерах пока отсутствует.</p>
                            $endif
                        </div>
                    </div>
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Описание номеров</div>
                        <div class="hotel-info-value">
                            $if(RoomTypes)
                                <ul>
                                    $foreach(var room in RoomTypes)
                                        <li>
                                            <strong>${room.Name}</strong> —
                                            вид: ${room.View},
                                            кровати: ${room.BedConfiguration},
                                            макс. размещение: ${room.MaxOccupancy} чел.,
                                            площадь: ${room.AreaSquareMeters} м²
                                        </li>
                                    $endfor
                                </ul>
                            $else
                                <p>Информация о номерах пока отсутствует.</p>
                            $endif
                        </div>
                    </div>
                </div>
            </div>

            <!-- ====== ВКЛАДКА: ИНФРАСТРУКТУРА ====== -->
            <div class="hotel-tab-content" data-tab="infra">
                <div class="hotel-info-grid">

                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Питание</div>
                        <div class="hotel-info-value">
                            $if(AvailableMealPlans)
                                <ul>
                                    $foreach(var mp in AvailableMealPlans)
                                        <li><strong>${mp.Code}</strong> — ${mp.Description}</li>
                                    $endfor
                                </ul>
                            $else
                                <p>Информация о питании отсутствует.</p>
                            $endif
                        </div>
                    </div>

                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Для детей</div>
                        <div class="hotel-info-value">
                            $if(ChildServices)
                                <ul>
                                    $foreach(var s in ChildServices)
                                        <li>${s}</li>
                                    $endfor
                                </ul>
                            $else
                                <p>Нет данных.</p>
                            $endif
                        </div>
                    </div>

                   <div class="hotel-info-row">
                        <div class="hotel-info-label">Развлечения и спорт</div>
                        <div class="hotel-info-value">

                            $if(FreeEntertainmentHtml)
                                <p><strong>Бесплатно:</strong></p>
                                <ul>
                                    ${FreeEntertainmentHtml}
                                </ul>
                            $endif

                            $if(PaidEntertainmentHtml)
                                <p><strong>Платно:</strong></p>
                                <ul>
                                    ${PaidEntertainmentHtml}
                                </ul>
                            $endif

                            $if(!FreeEntertainmentHtml && !PaidEntertainmentHtml)
                                <p>Информация о развлечениях пока отсутствует.</p>
                            $endif

                        </div>
                    </div>
                    <div class="hotel-info-row">
                        <div class="hotel-info-label">Услуги на территории</div>
                        <div class="hotel-info-value">
                            $if(OnSiteServices)
                                <ul>
                                    $foreach(var s in OnSiteServices)
                                        <li>${s}</li>
                                    $endfor
                                </ul>
                            $else
                                <p>Нет данных.</p>
                            $endif
                        </div>
                    </div>

                </div>
            </div>

            <!-- ====== ВКЛАДКА: АКЦИИ И НОВОСТИ ====== -->
            <div class="hotel-tab-content" data-tab="news">
                <p>Акции и новости по этому отелю появятся позже.</p>
            </div>

        </div> <!-- /cmn-l-block-wrap -->
    </div> <!-- /cmn-l-content_main -->

    <!-- ====== ФУТЕР ====== -->
    <footer class="footer-all-wrap">
        <div class="cmn-l-block-wrap cmn-l-block-wrap_nobg">
            <div class="footer-block-grid">
                <div class="footer-block__item">
                    <div class="footer-block__item-title">О нас</div>
                    <div class="footer-block__item-inner">
                        <a href="/articles/o-kompanii/" class="footer-block__item-link">О компании</a>
                        <a href="/articles/sotrudnichestvo" class="footer-block__item-link">Сотрудничество</a>
                        <span class="footer-block__item-link footer-block__item-link_disabled">
                            Пресса и партнеры о нас
                        </span>
                        <a href="/articles/politika-konfidentsialnosti"
                           class="footer-block__item-link">Политика конфиденциальности</a>
                    </div>
                </div>

                <div class="footer-block__item">
                    <div class="footer-block__item-title">Сайт</div>
                    <div class="footer-block__item-inner">
                        <a href="/countries" class="footer-block__item-link">Страны</a>
                        <a href="/search/" class="footer-block__item-link">Туры</a>
                        <a href="/excursion-tours/" class="footer-block__item-link">Экскурсионные туры</a>
                        <a href="/search/#avia" class="footer-block__item-link">Авиабилеты</a>
                    </div>
                </div>

                <div class="footer-block__item">
                    <div class="footer-block__item-title">Информация</div>
                    <div class="footer-block__item-inner">
                        <a href="/news" class="footer-block__item-link">Новости</a>
                        <a href="/articles/gde-kupit" class="footer-block__item-link">Где купить</a>
                        <a href="/mailing-list" class="footer-block__item-link">Подписаться на рассылку</a>
                        <a href="https://tourism.gov.ru/agents/"
                           class="footer-block__item-link">Реестр турагентств</a>
                    </div>
                </div>

                <div class="footer-block__item">
                    <div class="footer-block__item-title">Связаться с нами</div>
                    <div class="footer-block__item-inner">
                        <a href="/contacts" class="footer-block__item-link">Контакты</a>
                        <a href="tel:+74951202299"
                           class="footer-block__item-link footer-contact__contact-phone">
                            +7 495 120-22-99
                        </a>
                        <a href="mailto:agency@onetouch.travel"
                           class="footer-block__item-link footer-contact__contact-mail">
                            agency@onetouch.travel
                        </a>
                        <div class="footer-contact__social">
                            <a class="footer-contact__social-link" target="_blank"
                               href="https://t.me/onetouchtravel">
                                <img class="footer-contact__social-icon"
                                     src="/images/ficon_tg.svg" width="26" height="26" alt="">
                            </a>
                            <a class="footer-contact__social-link" target="_blank"
                               href="https://vk.com/onetouchtravel">
                                <img class="footer-contact__social-icon"
                                     src="/images/icon_vk.svg" width="26" height="26" alt="">
                            </a>
                            <a class="footer-contact__social-link" target="_blank"
                               href="https://www.youtube.com/@onetouchtravel3467">
                                <img class="footer-contact__social-icon"
                                     src="/images/ficon_yt.svg" width="26" height="26" alt="">
                            </a>
                            <a class="footer-contact__social-link" target="_blank"
                               href="https://rutube.ru/channel/25126845/">
                                <img class="footer-contact__social-icon"
                                     src="/images/icon_rutube.svg" width="26" height="26" alt="">
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="footer-divider">

            <div class="footer-subfooter">
                <div class="footer-subfooter-row">
                    <div class="footer-reestr-item">
                        <img class="footer-reestr-logo" src="/images/coat_of_arms.svg"
                             width="32" height="32" alt="Герб России">
                        <div class="footer-reestr-content">
                            <div class="footer-reestr-title">Мы в реестре туроператоров!</div>
                            <div class="footer-reestr-text">ООО «Вантач Трэвел»</div>
                            <div class="footer-reestr-id">РТО 017160</div>
                        </div>
                    </div>
